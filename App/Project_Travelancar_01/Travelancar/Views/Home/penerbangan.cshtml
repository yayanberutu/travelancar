@model namaproyek.Models.penerbangan

@{
    ViewBag.Title = "Penerbangan";
}

@{
    List<SelectListItem> listKota = new List<SelectListItem>();
    listKota.Add(new SelectListItem
    {
        Text = "----MEDAN---",
        Value = "Medan"
    });
    listKota.Add(new SelectListItem
    {
        Text = "----JAKARTA---",
        Value = "Jakarta",
        Selected = true
    });
    listKota.Add(new SelectListItem
    {
        Text = "----SURABAYA---",
        Value = "Surabaya"
    });
    listKota.Add(new SelectListItem
    {
        Text = "----BALI---",
        Value = "Bali"
    });
    listKota.Add(new SelectListItem
    {
        Text = "YOGYAKARTA",
        Value = "Yogyakarta"
    });
}

@{
    List<SelectListItem> listTujuan = new List<SelectListItem>();
    listTujuan.Add(new SelectListItem
    {
        Text = "MEDAN",
        Value = "Medan",
        Selected = true
    });
    listTujuan.Add(new SelectListItem
    {
        Text = "JAKARTA",
        Value = "Jakarta"
    });
    listTujuan.Add(new SelectListItem
    {
        Text = "SURABAYA",
        Value = "Surabaya"
    });
    listTujuan.Add(new SelectListItem
    {
        Text = "BALI",
        Value = "Bali"
    });
    listTujuan.Add(new SelectListItem
    {
        Text = "YOGYAKARTA",
        Value = "Yogyakarta"
    });
}

@{
    List<SelectListItem> listPenumpang = new List<SelectListItem>();
    listPenumpang.Add(new SelectListItem
    {
        Text = "1 Orang",
        Value = "1",
        Selected = true
    });
    listPenumpang.Add(new SelectListItem
    {
        Text = "2 Orang",
        Value = "2"
    });
    listPenumpang.Add(new SelectListItem
    {
        Text = "3 Orang",
        Value = "3"
    });
    listPenumpang.Add(new SelectListItem
    {
        Text = "4 Orang",
        Value = "4"
    });
}
<h3>Form Pencarian Tiket:</h3>

@using (Html.BeginForm())
{

    <fieldset>
        <legend>CariTiket</legend>
        <div>
            <strong><h5>Kota Asal :</h5></strong>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.kotaAsal, listKota, "--Pilih Kota Asal--")
        </div>

        <div>
            <strong><h5>Kota Tujuan :</h5></strong>
        </div>
        <div>
            @Html.DropDownListFor(model => model.kotaTujuan, listTujuan, "--Pilih Kota Tujuan---")
        </div>

        <div>
            <strong><h5>Tanggal Keberangkatan :</h5></strong>
        </div>
        <div>
            @Html.EditorFor(model => model.tanggalBerangkat)
        </div>

        <div>
            <strong><h5>Jumlah Penumpang :</h5></strong>
        </div>
        <div>
            @Html.DropDownListFor(model => model.jumlahPenumpang, listPenumpang, "--Jumlah Penumpang---")
        </div>

        <p>
            <input type="submit" value="Cari Tiket" />
        </p>
    </fieldset>
}

