
@{
    ViewBag.Title = "Booking";

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#flip").click(function () {
            $("#panel").slideToggle("slow");
        });
    });


    $(document).ready(function () {
        $("#flop").click(function () {
            $("#panol").slideToggle("slow");
        });
    });
</script>
<style>
    #flip {
        padding: 5px;
        border: solid 1px #B0DFE5;
    }

    #flop {
        padding: 5px;
        border: solid 1px #B0DFE5;
    }

    #panol {
        padding: 5px;
        display: none;
        background-color: #B0DFE5;
    }

    #panel {
        padding: 5px;
        display: none;
        background-color: #B0DFE5;
    }
</style>

<h2>Pembayaran</h2>

